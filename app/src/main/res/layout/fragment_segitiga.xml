            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hasil_sgt_luas" app:layout_constraintStart_toEndOf="@+id/luas_sgt"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/luas_sgt" app:layout_constraintHorizontal_bias="0.123"
            tools:text="textt"/>
    <TextView
            android:text="@string/kelilingsgt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keliling_sgt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/luas_sgt" app:layout_constraintHorizontal_bias="0.175"/>
