            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hasil_keliling_sgt" app:layout_constraintStart_toEndOf="@+id/keliling_sgt"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/keliling_sgt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.069" tools:text="texty"/>
    <Button
            android:text="@string/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_share" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="72dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.863"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>